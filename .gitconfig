#===============================================================================
# Core
#===============================================================================

[user]
  email = dev@michalsvorc.com
  name = Michal Svorc

[init]
  defaultBranch = main

[pull]
  rebase = false

[help]
  autocorrect = 30

#===============================================================================
# Diff
#===============================================================================

[diff]
  #tool = vimdiff3
  tool = nvim_diff

[difftool]
  prompt = false
  colorMoved = default

[difftool "nvim_diff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

#===============================================================================
# Merge
#===============================================================================

[merge]
  #tool = vimdiff
  tool = nvim_fugitive

[mergetool]
  prompt = false
  keepBackup = false

# https://github.com/tpope/vim-fugitive
[mergetool "nvim_fugitive"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

#===============================================================================
# Aliases
#===============================================================================

[alias]
  c   = clone
  cc  = checkout
  cm  = commit
  l   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  l1  = log -1 HEAD --stat
  s   = status -s

#===============================================================================
# tig
# https://github.com/jonas/tig
#===============================================================================

[tig "bind"]
  status = P !git push origin
  main = L !git pull origin

