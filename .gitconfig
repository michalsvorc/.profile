#===============================================================================
# Core
#===============================================================================

[user]
  email = dev@michalsvorc.com
  name = Michal Svorc

[init]
  defaultBranch = main

[pull]
  rebase = false

[pager]
  diff = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[help]
  autocorrect = 30

#===============================================================================
# Diff
#===============================================================================

[diff]
  colorMoved = default
  tool = vimdiff3

[difftool]
  prompt = false

#===============================================================================
# Merge
#===============================================================================

[merge]
  tool = vimdiff

#===============================================================================
# Aliases
#===============================================================================

[alias]
  c = clone
  cc = checkout
  cm = commit
  l = log
  l1 = log -1 HEAD --stat
  s = status

#===============================================================================
# tig
# https://github.com/jonas/tig
#===============================================================================

[tig "bind"]
  status = P !git push origin
  main = L !git pull origin

#===============================================================================
# delta
# https://github.com/dandavison/delta
#===============================================================================

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
  navigate = true

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none
