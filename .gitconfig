#===============================================================================
# User
#===============================================================================

[user]
  email = dev@michalsvorc.com
  name = Michal Svorc

#===============================================================================
# Aliases
#===============================================================================

[alias]
  c  = clone
  d  = difftool
  cc = checkout
  cm = commit
  l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr: %cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=iso
  s  = status -s

#===============================================================================
# Main
#===============================================================================

[core]
  pager = bat --plain
  editor = $EDITOR

[init]
  defaultBranch = main

[pull]
  rebase = false

[help]
  autocorrect = 30

[commit]
  verbose = true

#===============================================================================
# Diff
#===============================================================================

[diff]
  tool = nvim_diff
  colorMoved = default

[difftool]
  prompt = false
  colorMoved = default

[difftool "nvim_diff"]
  cmd = nvim -c Gvdiffsplit! "$MERGED"

#===============================================================================
# Merge
#===============================================================================

[merge]
  tool = nvim_merge
  conflictstyle = diff3

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvim_merge"]
  cmd = nvim -f -c Gvdiffsplit! "$MERGED"
